<section class="movie-details">
  <div class="image">
    <%= image_tag @movie.image_file_name %>
    <% if @favorite %>
      <%= button_to "♡ Unfave", movie_favorite_path(@movie, @favorite), method: :delete %>
    <% else %>
      <%= button_to "♥️ Fave", movie_favorites_path(@movie) %>
    <% end %>
    <div class="count">
      <%= @fans.size %>
    </div>
  </div>
  <div class="details">
    <h1><%= @movie.title %></h1>
    <h2>
      <%= year_of(@movie) %> &bull; <%= @movie.rating %>
    </h2>
    <div class="reviews">
    <%= average_stars(@movie) %>
    <%= link_to pluralize(@movie.reviews.size, 'Reviews'), movie_reviews_path(@movie) %>
    </div>
    <p>
      <%= @movie.description %>
    </p>
    <table>
      <tr>
        <th>Total Gross:</th>
        <td><%= total_gross(@movie) %></td>
      </tr>
    </table>
      <%= link_to "New Review", new_movie_review_path(@movie), class: "review" %>
  </div>
  <% if @fans.present? %>
    <h4>Fans</h4>
    <ul>
      <% @fans.each do |user| %>
        <li>
          <%= link_to user.name, user %>
        </li>
      <% end %>
    </ul>
  <% end %>
  <% if @genres.present? %>
  <h4>Genres</h4>
  <ul>
    <% @genres.each do |g| %>
      <li><%= g.name %></li>
    <% end %>
  </ul>
    <% end %>
</aside>
</section>

<% if current_user_admin? %>
<section class="admin">
  <%= link_to "Edit", edit_movie_path(@movie), class: "button" %>
  <%= link_to "Delete", movie_path(@movie), class: 'button', method: :delete, 
    data: { confirm: 'Are you sure?' } %>
</section>
<% end %>
